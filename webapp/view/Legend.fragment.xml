<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<ResponsivePopover
		title="Calendar Legend"
		placement="Bottom"
		showHeader="false">
		<PlanningCalendarLegend
			appointmentItems="{
					path : 'tipoModel>/Tipos',
					templateShareable: true
				}">
			<appointmentItems>
				<u:CalendarLegendItem
					text="{tipoModel>text}"
					type="{tipoModel>type}"
					tooltip="{tipoModel>text}" />
			</appointmentItems>
		</PlanningCalendarLegend>
	</ResponsivePopover>
</core:FragmentDefinition>